.btn-blue
	color: #FFFFFF
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25)
	background-color: #329A9F
	*background-color: #329A9F
	background-image: -moz-linear-gradient(top, #13CBD4, #329A9F)
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#13CBD4), to(#329A9F))
	background-image: -webkit-linear-gradient(top, #13CBD4, #329A9F)
	background-image: -o-linear-gradient(top, #13CBD4, #329A9F)
	background-image: linear-gradient(to bottom, #13CBD4, #329A9F)
	background-repeat: repeat-x
	border-color: #329A9F
	border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)


.btn-blue:hover,
.btn-blue:active,
.btn-blue.active,
.btn-blue.disabled,
.btn-blue[disabled] 
	color: #FFFFFF
	background-color: #329A9F
	*background-color: #003bb3

  
.btn-green {
	color: #FFFFFF;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
	background-color: #7BB739;
	*background-color: #7BB739;
	background-image: -moz-linear-gradient(top, #89F514, #7BB739);
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#89F514), to(#7BB739));
	background-image: -webkit-linear-gradient(top, #89F514, #7BB739);
	background-image: -o-linear-gradient(top, #89F514, #7BB739);
	background-image: linear-gradient(to bottom, #89F514, #7BB739);
	background-repeat: repeat-x;
	border-color: #7BB739;
	border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
	filter: //progid:DXImageTransform.Microsoft.gradient(startColorstr='#89F514', endColorstr='#7BB739', GradientType=0);
	//filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
}
.btn-green:hover,
.btn-green:active,
.btn-green.active,
.btn-green.disabled,
.btn-green[disabled] {
	color: #FFFFFF;
	background-color: #7BB739;
	*background-color: #003bb3;
}

